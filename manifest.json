{
  "manifest_version": 3,
  "name": "Button Click Notifier (lighter.xyz)",
  "version": "1.0.0",
  "description": "Detects button clicks on app.lighter.xyz and shows notifications",
  "permissions": [
    "notifications",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.lighter.xyz/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
